<section id="resume">
    {% for section in page.header.sections %}
    <div class="row {{ section.css_class }}">
        <div class="three columns header-col">
            <h1><span>{{ section.title }}</span></h1>
        </div>
        <div class="nine columns main-col">
            {% for item in section.items %}
            <div class="row item">
                <div class="twelve columns">
                    {% if item.title %}
                    <h3>{{ item.title }}</h3>
                    {% endif %}
                    {% if item.info %} 
                    <p class="info">
                        {{ item.info }}
                        {% if item.date %}
                        <span>&bull;</span> <em class="date">{{ item.date }}</em>
                        {% endif %}
                    </p>
                    {% endif %}
                    {% if item.description %}
                    <p>
                        {{ item.description }}
                    </p>
                    {% endif %}

                    {% if item.list %}
                    <p>
                        <ul style="padding-left:40px">
                            {% for bullet in item.list %}
                            <li class="bulletlist"> {{ bullet }} </li>
                            {% endfor %}
                        </ul>
                    </p>
                    {% endif %}

                    {% if item.areas %}
                    <p>
                    <div style="overflow-x:auto">
                        <table class="areas">
                            {% for area in item.areas %}
                            <tr>
                                <td> {{ area.1 }} </td>
                                <td> {{ area.2 }} </td>
                                <td> {{ area.3 }} </td>
                            </tr>
                            {% endfor %}
                        </table>
                        </div>
                    </p>
                    {% endif %}

                    {% if item.cores %}
                    <p>
                    <div style="overflow-x:auto">
                        <table class="cores">
                        {% for core in item.cores %}
                        <tr>
                            <td><b> {{ core.1 }} </b></td>
                            <td> {{ core.2 }} </td>
                        </tr>
                        {% endfor %}
                        </table>
                        </div>
                    </p>
                    {% endif %}

                    {% if item.skills %}
                    <div class="bars">
                        <ul class="skills">
                            {% for skill in item.skills %}
                            <li><span class="bar-expand" style="width: {{ skill.level }}%;animation: {{ skill.name|lower }} 2s ease;"></span><em>{{ skill.name }}</em></li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}

                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endfor %}
</section>
